import { ScrollView, LineEdit } from "std-widgets.slint";
export component BufferLine {
    in-out property <physical-length> buffer;
    in-out property <physical-length> line-thickness;
    max-height: buffer;
    VerticalLayout {
        Rectangle {}        
        Rectangle {
            height: line-thickness;
            background: black;
        }
        Rectangle {}
    }
}


export component TableHeader inherits Rectangle {
    in-out property <string> text;
    pure callback on-sort-clicked(int);
    HorizontalLayout {
        width: parent.width;
        header-title := Text { 
            text: text;
            horizontal-alignment: TextHorizontalAlignment.left;
            vertical-alignment: TextVerticalAlignment.center;
            wrap: TextWrap.word-wrap;
        }
        sorting-icon := TouchArea {
            Image {
                
            }
        }
    }
}
export component TableText inherits TouchArea{
    in-out property <string> text;
    in-out property <string> edit-text;
    Rectangle {
        width: parent.width;
        border-radius: 2px;
        border-color: black;
        header-title := LineEdit {
            width: parent.width;
            placeholder-text: text;
            text: edit-text;
            horizontal-alignment: TextHorizontalAlignment.left;
        }
    }
}

export component TableActionIcons inherits Rectangle {
    GridLayout {
        update-row := TouchArea {
