
import { Button, TabWidget } from "std-widgets.slint";
import { PropertyMenu } from "properties.slint";
import { StatementMenu } from "statements.slint";
import { ExpenseMenu, ExpenseInput } from "expenses.slint";
export component NavigationPane inherits Rectangle {
    pure callback new-expense <=> expense-menu.new-expense;

    in-out property <[ExpenseInput]> expenses <=> expense-menu.expenses;
    Rectangle {
        TabWidget {
            Tab {
                title: "Home";
            }
            Tab {
                title: "Statements";
                Rectangle {
                    statement_menu := StatementMenu { }
                }
            }
            Tab {
                title: "Properties";
                Rectangle {
                    padding: 20px;
                    prop_menu := PropertyMenu { }
                }
            }
            Tab {
                title: "Expenses";
                expense_menu := ExpenseMenu { }
            }
            Tab {
                title: "About";
            }
        }
    }
}

export component App inherits Window { 
    // === Window ===
    title: "Hestia";
    always-on-top: true;
    //no-frame: true;

    // === Sizing ===
    min-width: 400px;
    preferred-width: 800px;
    min-height: 300px;
    preferred-height: 600px;

    // === Elements ===
    padding: 10px;

    // === Colors ===
    background: white;

    // === Callbacks ===
    pure callback new-expense <=> nav-pane.new-expense; 

    // === Properties ===
    in-out property <[ExpenseInput]> expenses <=> nav-pane.expenses;
    
    nav-pane := NavigationPane { }
}
